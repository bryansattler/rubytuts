<div class="row">
  <div class="large-12 columns">
    <div class="row">
      <h1>All Wikis</h1>

      <% if can? :create, Wiki %>
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-primary btn-mini' %>
      <% end %>
      
      <% @wikis.each do |wiki| %>
        <h4><%= link_to wiki.title, wiki %></h4>
      <small>
        submitted <%= time_ago_in_words(wiki.created_at) %> ago by <%= wiki.user.name %><br/>
        <%= wiki.comments.count %> Comments
      </small>        
      <% end %>
    </div>
  </div>
</div>      

